<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/input_project_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Enter project name"
        android:inputType="textMultiLine"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="55dp" />

    <EditText
        android:id="@+id/input_project_customer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Enter customer name"
        android:inputType="textMultiLine"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/input_project_name"
        tools:layout_editor_absoluteX="55dp" />

    <EditText
        android:id="@+id/input_project_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Enter project description"
        android:inputType="textMultiLine"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/input_project_customer_name"
        tools:layout_editor_absoluteX="55dp" />

    <EditText
        android:id="@+id/input_company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Enter company name, we try to retrieve a logo!"
        android:inputType="textMultiLine"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/input_project_description"
        tools:layout_editor_absoluteX="55dp" />

</androidx.constraintlayout.widget.ConstraintLayout>